#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

<Truck>:
    size: 20, 10
    origin: 10, 5
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
            source: "./images/truck.png"
        PopMatrix

<Mail>:
    size: 25,25
    canvas:
        Color:
            rgba: 1,1,1,1
        Ellipse:
            pos: self.pos
            size: self.size
            source: "./images/mail.png"

<Box>:
    size: 1,1
    canvas:
        Color:
            rgba: 1,1,1,1
        Ellipse:
            pos: self.pos
            size: self.size
            source: "./images/box.png"

<Game>:
    truck: game_truck
    mail: game_mail
    box: game_box
    canvas:
        Rectangle:
            pos: self.pos
            size: 1429, 660
            source: "./images/citymap.png"

    Truck:
        id: game_truck
        center: self.parent.center
    Mail:
        id: game_mail
        center: self.parent.center
    Box:
        id: game_box
        center: self.parent.center
